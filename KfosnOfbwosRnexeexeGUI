-- Example skeleton (custom UI, no library)

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TimeStandCustomUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- ── Bubble Toggle Button ──
local bubble = Instance.new("Frame")
bubble.Size = UDim2.new(0, 60, 0, 60)
bubble.Position = UDim2.new(0.05, 0, 0.85, 0)  -- bottom-left-ish start
bubble.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
bubble.BackgroundTransparency = 0.3
bubble.BorderSizePixel = 0
bubble.Parent = screenGui

local bubbleCorner = Instance.new("UICorner")
bubbleCorner.CornerRadius = UDim2.new(1, 0, 1, 0)  -- full circle
bubbleCorner.Parent = bubble

local bubbleStroke = Instance.new("UIStroke")
bubbleStroke.Color = Color3.fromRGB(100, 255, 100)  -- green accent
bubbleStroke.Thickness = 2
bubbleStroke.Transparency = 0.4
bubbleStroke.Parent = bubble

local rLabel = Instance.new("TextLabel")
rLabel.Size = UDim2.new(1, 0, 1, 0)
rLabel.BackgroundTransparency = 1
rLabel.Text = "R"
rLabel.TextColor3 = Color3.fromRGB(255, 0, 0)  -- bright red
rLabel.Font = Enum.Font.GothamBlack
rLabel.TextSize = 42
rLabel.TextStrokeTransparency = 0.7
rLabel.TextStrokeColor3 = Color3.new(0,0,0)
rLabel.Parent = bubble

-- Make bubble draggable
local dragging, dragInput, dragStart, startPos
bubble.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = bubble.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

bubble.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        bubble.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- ── Main GUI Frame ──
local mainGui = Instance.new("Frame")
mainGui.Name = "Main"
mainGui.Size = UDim2.new(0.65, 0, 0.75, 0)          -- horizontal rectangle
mainGui.Position = UDim2.new(0.175, 0, 0.125, 0)   -- centered-ish
mainGui.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
mainGui.BorderSizePixel = 0
mainGui.Visible = false
mainGui.Parent = screenGui

-- Green → Purple gradient
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 120)),   -- bright green left
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(80, 0, 180)),  -- mix/blur area
    ColorSequenceKeypoint.new(1, Color3.fromRGB(140, 0, 255))    -- purple right
}
gradient.Rotation = 0  -- left to right
gradient.Parent = mainGui

-- Optional subtle blur (if you want bloom/blur effect, needs Lighting setup or UI Blur)
-- local blur = Instance.new("BlurEffect") etc. but usually better with UIGradient alone

local mainCorner = Instance.new("UICorner")  -- but you said NO rounded → set to 0 or remove
mainCorner.CornerRadius = UDim2.new(0,0,0,0)
mainCorner.Parent = mainGui  -- or just delete it

-- Top bar
local topBar = Instance.new("Frame")
topBar.Size = UDim2.new(1,0,0,40)
topBar.BackgroundColor3 = Color3.fromRGB(15,15,20)
topBar.BorderSizePixel = 0
topBar.Parent = mainGui

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0.3,0,1,0)
titleLabel.Position = UDim2.new(0.7,0,0,0)  -- right side
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "TimeStand Premium"       -- or your name
titleLabel.TextColor3 = Color3.fromRGB(200,255,200)
titleLabel.Font = Enum.Font.GothamSemibold
titleLabel.TextSize = 18
titleLabel.TextXAlignment = Enum.TextXAlignment.Right
titleLabel.Parent = topBar

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0,30,0,30)
closeBtn.Position = UDim2.new(1,-35,0,5)
closeBtn.BackgroundColor3 = Color3.fromRGB(180,0,0)
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.Parent = topBar

-- Gear button next to X (placeholder)
local gearBtn = Instance.new("ImageButton")
gearBtn.Size = UDim2.new(0,28,0,28)
gearBtn.Position = UDim2.new(1,-70,0,6)
gearBtn.BackgroundTransparency = 1
gearBtn.Image = "rbxassetid://3926305904"  -- example gear icon, change to yours
gearBtn.Parent = topBar

-- Sidebar for tabs (left vertical)
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0.22,0,1,-40)
sidebar.Position = UDim2.new(0,0,0,40)
sidebar.BackgroundTransparency = 0.4
sidebar.Parent = mainGui

-- Gradient on sidebar too, or solid dark
-- Add scrolling if many tabs
local tabList = Instance.new("ScrollingFrame")
tabList.Size = UDim2.new(1,0,1,0)
tabList.CanvasSize = UDim2.new(0,0,0,300)  -- adjust
tabList.Parent = sidebar

-- Example tabs (like your screenshot)
local tabs = {"Home", "Players", "Auras (WIP)", "Scripts", "AntiStand", "Target", "Settings"}

for i, tabName in ipairs(tabs) do
    local tabBtn = Instance.new("TextButton")
    tabBtn.Size = UDim2.new(1,0,0,50)
    tabBtn.Position = UDim2.new(0,0,0,(i-1)*50)
    tabBtn.BackgroundColor3 = Color3.fromRGB(40,40,60)
    tabBtn.Text = tabName
    tabBtn.TextColor3 = Color3.fromRGB(180,255,180)
    tabBtn.Font = Enum.Font.Gotham
    tabBtn.TextSize = 16
    tabBtn.Parent = tabList
    
    -- Add icon if wanted (ImageLabel left of text)
    
    tabBtn.MouseButton1Click:Connect(function()
        -- Switch content frame visibility or clear/rebuild right panel
        print("Switched to " .. tabName)
        -- Here you'd show the corresponding section with your remotes/buttons
    end)
end

-- Content area (right side)
local content = Instance.new("Frame")
content.Size = UDim2.new(0.78,0,1,-40)
content.Position = UDim2.new(0.22,0,0,40)
content.BackgroundTransparency = 1
content.Parent = mainGui

-- Example: put your Infinite Yield load button, rainbow toggle, etc. here when tab selected

-- Toggle logic
local function toggleGui()
    mainGui.Visible = not mainGui.Visible
end

bubble.MouseButton1Click:Connect(toggleGui)
closeBtn.MouseButton1Click:Connect(toggleGui)

-- Make main GUI draggable (top bar)
topBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        -- similar drag logic as bubble
    end
end)
